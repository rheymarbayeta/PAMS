# PAMS Docker Environment Configuration
# Copy this file to .env and update the values

# =====================
# Database Configuration
# =====================
MYSQL_ROOT_PASSWORD=your_secure_root_password
DB_NAME=pams_db
DB_USER=pams_user
DB_PASSWORD=your_secure_db_password

# =====================
# Backend Configuration
# =====================
# JWT Secret - Use a long random string (32+ characters)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_at_least_32_chars
JWT_EXPIRES_IN=24h
NODE_ENV=production

# Frontend URL for CORS configuration
FRONTEND_URL=http://192.168.11.17:3000

# =====================
# Frontend Configuration
# =====================
# API URL that the frontend will use to connect to the backend
# For local development: http://localhost:5000
# For production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://192.168.11.17:5000
